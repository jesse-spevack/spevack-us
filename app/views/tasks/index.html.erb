<header class="flex justify-between items-center p-6 border-b border-black">
  <div class="flex items-baseline gap-4">
    <h1 class="text-2xl font-light -tracking-wider">ChoreTracker</h1>
    <span class="text-lg text-gray-600"><%= @child.name %></span>
  </div>
  <%= button_to "Switch Child", session_path, 
      method: :delete,
      class: "border border-black px-4 py-2 text-sm hover:bg-black hover:text-white transition-all duration-150 min-h-11" %>
</header>

<nav class="flex justify-center items-center gap-6 p-8 pb-6">
  <%= link_to "←", tasks_path(date: @date - 1), 
      class: "nav-link text-2xl p-2" %>
  <h2 class="text-xl font-light min-w-52 text-center">
    <%= @date.strftime("%A, %B %d") %>
  </h2>
  <%= link_to "→", tasks_path(date: @date + 1), 
      class: "nav-link text-2xl p-2 #{'invisible' if @date >= Date.current}" %>
  <% unless @is_today %>
    <%= link_to "Today", tasks_path, 
        class: "border border-black px-4 py-2 text-sm hover:bg-black hover:text-white transition-all duration-150 min-h-11" %>
  <% end %>
</nav>

<%= render "tasks_frame" %>